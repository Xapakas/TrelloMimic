<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<TitledPane animated="false" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="views.CardController">
   <content>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <center>
            <VBox BorderPane.alignment="CENTER">
               <children>
                  <FlowPane id="labelsFlowPane" fx:id="labelsFlowPane">
                     <children>
                        <Label text="Labels:">
                           <FlowPane.margin>
                              <Insets bottom="10.0" />
                           </FlowPane.margin>
                        </Label>
                     </children>
                  </FlowPane>
                  <FlowPane id="componentsFlowPane" fx:id="componentsFlowPane">
                     <children>
                        <Label text="Components:">
                           <FlowPane.margin>
                              <Insets bottom="10.0" />
                           </FlowPane.margin>
                        </Label>
                     </children>
                  </FlowPane>
                  <FlowPane id="membersFlowPane" fx:id="membersFlowPane">
                     <children>
                        <Label text="Members:">
                           <FlowPane.margin>
                              <Insets bottom="10.0" />
                           </FlowPane.margin>
                        </Label>
                     </children>
                  </FlowPane>
               </children>
               <BorderPane.margin>
                  <Insets bottom="10.0" />
               </BorderPane.margin>
            </VBox>
         </center>
         <bottom>
            <VBox alignment="CENTER" BorderPane.alignment="CENTER">
               <children>
                  <Button id="addLabel" fx:id="addLabelButton" mnemonicParsing="false" onAction="#onClickAddLabel" text="Add Label">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button id="addComponent" fx:id="addComponentButton" mnemonicParsing="false" onAction="#onClickAddComponent" text="Add Component">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button id="addMemberButton" fx:id="addMemberButton" mnemonicParsing="false" onAction="#onClickAddMember" text="Add Member">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </bottom>
      </BorderPane>
   </content>
   <graphic>
      <Label id="cardNameLabel" fx:id="cardNameLabel" text="[card name]" />
   </graphic>
</TitledPane>
